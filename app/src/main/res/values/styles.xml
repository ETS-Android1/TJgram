<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">#FFFFFF</item>
        <item name="colorPrimaryDark">#EAA247</item>
        <item name="colorAccent">#2196F3</item>

        <!--<item name="android:statusBarColor">?colorPrimaryDark</item>-->
        <!--<item name="android:navigationBarColor">@color/navigationBarColor</item>-->
        <item name="android:windowBackground">@color/background</item>
        <item name="android:colorBackground">@color/background</item>
        <!--<item name="android:colorForeground">@color/foreground</item>--><!--don't use it-->
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:listDivider">@color/divider</item>
        <item name="android:divider">@color/divider</item>

        <item name="switchStyle">@style/Widget.TJ.Switch</item>

        <item name="materialCardViewStyle">@style/Widget.TJ.Card</item>
        <item name="bottomNavigationStyle">@style/Widget.TJ.BottomNavigationView</item>
        <item name="tabStyle">@style/Widget.TJ.TabLayout</item>
        <item name="popupMenuStyle">@style/Widget.TJ.PopupMenu</item>
        <item name="actionButtonStyle">@style/Widget.TJ.ActionButton</item>

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionBarOverlay">false</item>
        <!--<item name="android:windowLightStatusBar">true</item>-->
    </style>

    <style name="AppTheme.Launcher" parent="Theme.AppCompat.Light.NoActionBar">
        <!--<item name="android:statusBarColor">#EAA247</item>-->
        <!--<item name="android:windowLightStatusBar">true</item>-->
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="AppTheme.StatusBar.Transparent" parent="AppTheme">
        <!--<item name="android:windowLightStatusBar">false</item>-->
        <!--<item name="android:windowDrawsSystemBarBackgrounds">true</item>-->
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <!--BottomNavigationView-->
    <style name="Widget.TJ.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="labelVisibilityMode">unlabeled</item>
    </style>

    <!--CardView-->
    <style name="Widget.TJ.Card" parent="Widget.MaterialComponents.CardView">
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="cardBackgroundColor">@color/card</item>
        <!--<item name="cardElevation">0dp</item>-->
    </style>

    <!--SwitchCompat-->
    <!--<style name="Widget.TJ.Switch" parent="Widget.AppCompat.CompoundButton.Switch">-->
    <style name="Widget.TJ.Switch" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="colorControlActivated">?colorAccent</item>

        <!-- неактивное состояние ползунка -->
        <item name="colorSwitchThumbNormal">@color/md_red_500</item>

        <!-- цвет дорожки для неактивного состояния (30% прозрачности) -->
        <item name="android:colorForeground">@color/md_grey_500</item>
    </style>

    <!--AppBarLayout-->
    <style name="Widget.TJ.AppBar" parent="Widget.Design.AppBarLayout">
        <!--<item name="android:elevation">1dp</item>-->
    </style>

    <!--TabLayout-->
    <style name="Widget.TJ.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextAppearance">@style/TabWidget</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TabWidget">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!--PopupMenu-->
    <style name="Widget.TJ.PopupMenu" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:dropDownHorizontalOffset">0dp</item>
        <item name="android:dropDownVerticalOffset">0dp</item>
    </style>

    <!--Button-->
    <style name="Button.Borderless" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textColor">@color/accent</item>
    </style>

    <!--TextInputLayout-->
    <style name="TextInputCounterOverflow" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/error_text</item>
    </style>

    <style name="Widget.TJ.ActionButton" parent="Widget.AppCompat.ActionButton">
        <!--<item name="android:drawablePadding">16dp</item>-->
    </style>

    <!--BottomNavBar-->
    <style name="BadgeText" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textSize">@dimen/badge_text_size</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_marginTop">@dimen/badge_top_margin</item>
        <item name="android:paddingRight">@dimen/badge_width_padding</item>
        <item name="android:paddingLeft">@dimen/badge_width_padding</item>
        <item name="android:paddingBottom">@dimen/badge_height_padding</item>
        <item name="android:paddingTop">@dimen/badge_height_padding</item>
        <item name="android:visibility">gone</item>
    </style>
</resources>