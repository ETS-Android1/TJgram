<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profileLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/card"
    android:visibility="gone"
    tools:visibility="visible">

    <!--Avatar-->
    <com.alexvasilkov.gestures.commons.circle.CircleImageView
        android:id="@+id/avatarImage"
        android:layout_width="112dp"
        android:layout_height="112dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@mipmap/ic_launcher"/>

    <!--Karma-->
    <androidx.cardview.widget.CardView
        android:id="@+id/karmaCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toEndOf="@id/avatarImage"
        app:layout_constraintBottom_toBottomOf="@id/avatarImage">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/karmaValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="6dp"
            android:fontFamily="sans-serif-medium"
            android:ellipsize="end"
            android:textSize="18sp"
            tools:text="+148,787" />

    </androidx.cardview.widget.CardView>

    <!--Name-->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/nameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textSize="26sp"
        android:lineSpacingMultiplier="1.2"
        android:textColor="?android:attr/textColorPrimary"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/avatarImage"
        tools:text="Ded Pihto"/>

    <!--Paid Icon-->
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/paidIcon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/nameText"
        app:layout_constraintStart_toEndOf="@id/nameText"
        tools:srcCompat="@drawable/ic_check_decagram"/>

    <!--Date-->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/regDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:textSize="17sp"
        android:lineSpacingMultiplier="1.2"
        android:textColor="?android:attr/textColorSecondary"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameText"
        tools:text="Зарегистрировался 25 июля 2015"/>

    <!--Expand Contacts-->
    <org.michaelbel.tjgram.modules.profile.view.ExpandableView
        android:id="@+id/contactsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/regDate"
        app:inner_view="@layout/view_collapsed"/>

    <View
        android:id="@+id/dividerView"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="?android:attr/colorBackground"
        app:layout_constraintTop_toBottomOf="@+id/contactsLayout"/>

    <!--Comments-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/commentsLayout"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:orientation="vertical"
        android:background="?attr/selectableItemBackground"
        app:layout_constraintTop_toBottomOf="@+id/dividerView">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/commentsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="?android:attr/textColorPrimary"
            android:fontFamily="sans-serif-medium"
            android:layout_marginStart="16dp"
            android:text="@string/comments"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/commentsCountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="?android:attr/textColorSecondary"
            android:fontFamily="sans-serif"
            android:layout_marginEnd="16dp"
            android:text="@string/loading"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="65 536"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/dividerView2"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginStart="14dp"
        android:background="?android:attr/divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/commentsLayout"/>

    <!--Favorites-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/favoritesLayout"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:orientation="vertical"
        android:background="?attr/selectableItemBackground"
        app:layout_constraintTop_toBottomOf="@+id/dividerView2">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/favoritesText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="?android:attr/textColorPrimary"
            android:fontFamily="sans-serif-medium"
            android:layout_marginStart="16dp"
            android:text="@string/favorites"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/favoritesCountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="?android:attr/textColorSecondary"
            android:fontFamily="sans-serif"
            android:layout_marginEnd="16dp"
            android:text="@string/loading"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="1536"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>