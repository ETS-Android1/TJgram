<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/socialLayout"
    android:layout_width="wrap_content"
    android:layout_height="32dp"
    android:layout_marginBottom="6dp"
    android:background="@drawable/background_acc"
    tools:background="@color/social_vk">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/socialIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center_vertical"
        android:layout_marginStart="8dp"
        tools:src="@drawable/ic_social_vk"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/socialText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center_vertical"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="8dp"
        android:gravity="center_vertical"
        android:textSize="16sp"
        android:ellipsize="end"
        android:maxLines="1"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/card"
        tools:text="Neurotoxin Neurotoxin"/>

</FrameLayout>