<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/socialLayout"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/social_button_height"
    android:layout_marginBottom="@dimen/social_button_margin"
    android:background="@drawable/background_acc">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/socialIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center_vertical"
        android:layout_marginStart="@dimen/social_button_icon_margin"
        tools:src="@drawable/ic_social_vk"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/socialText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center_vertical"
        android:layout_marginStart="@dimen/social_button_text_margin_start"
        android:layout_marginEnd="@dimen/social_button_text_margin_end"
        android:gravity="center_vertical"
        android:textSize="@dimen/social_button_text_size"
        android:ellipsize="end"
        android:maxLines="1"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/card"
        tools:text="Neurotoxin Neurotoxin"/>

</FrameLayout>