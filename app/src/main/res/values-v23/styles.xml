<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">#FFFFFF</item>
        <item name="colorPrimaryDark">#FFECB3</item>
        <item name="colorAccent">#2196F3</item>

        <item name="android:statusBarColor">?colorPrimaryDark</item>
        <item name="android:navigationBarColor">@color/navigation_bar</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="android:colorForeground">@color/foreground</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:listDivider">@color/divider</item>
        <item name="android:divider">@color/divider</item>

        <item name="switchStyle">@style/Widget.TJ.Switch</item>
        <item name="materialCardViewStyle">@style/Widget.TJ.Card</item>
        <item name="bottomNavigationStyle">@style/Widget.TJ.BottomNavigationView</item>
        <item name="tabStyle">@style/Widget.TJ.TabLayout</item>
        <item name="popupMenuStyle">@style/Widget.TJ.PopupMenu</item>

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionBarOverlay">false</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!--BottomNavigationView-->
    <style name="Widget.TJ.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="labelVisibilityMode">unlabeled</item>
    </style>

    <!--CardView-->
    <style name="Widget.TJ.Card" parent="Widget.MaterialComponents.CardView">
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="cardBackgroundColor">@color/foreground</item>
    </style>

    <!--SwitchCompat-->
    <style name="Widget.TJ.Switch" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="colorControlActivated">?colorAccent</item>
    </style>

    <!--AppBarLayout-->
    <style name="Widget.TJ.AppBar" parent="Widget.Design.AppBarLayout">
        <item name="android:elevation">1dp</item>
    </style>

    <!--TabLayout-->
    <style name="Widget.TJ.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextAppearance">@style/TabWidget</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!--PopupMenu-->
    <style name="Widget.TJ.PopupMenu" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:dropDownHorizontalOffset">0dp</item>
        <item name="android:dropDownVerticalOffset">0dp</item>
    </style>

    <style name="TabWidget">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="SearchView">
        <item name="android:inputType">text</item>
        <item name="android:imeOptions">actionSearch|flagNoExtractUi</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:hint">@string/hint_search</item>
        <item name="android:typeface">normal</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textColorHint">?android:attr/textColorHint</item>
    </style>

    <style name="Button.Borderless" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/accent</item>
    </style>

    <style name="TextInputCounterOverflow" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/error_text</item>
    </style>
</resources>